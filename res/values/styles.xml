<?xml version="1.0" encoding="utf-8"?>
<resources><style name="Theme.HalfTranslucent" parent="@android:style/Theme.Translucent">
        <item name="android:windowBackground">@color/half_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Translucent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Animation.Translucent" parent="@style/Animation">
        <item name="android:windowEnterAnimation">@anim/translucent_zoom_out</item>
        <item name="android:windowExitAnimation">@anim/translucent_zoom_exit</item>
    </style>
    <style name="Animation" />

    <style name="frame_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/frame_button_bg</item>
       	<item name="android:textColor">@color/frame_button_text_light</item>
     
    </style>
    
    <style name="loading_small" parent="@android:style/Widget.ProgressBar.Small">
		<item name="android:indeterminateDrawable">@anim/loading</item>
		<item name="android:layout_width">21dip</item> 
		<item name="android:layout_height">21dip</item>
		<item name="android:layout_gravity">center_vertical</item>
	</style>
	
        <style name="widget_listview">
        <item name="android:layout_width">fill_parent</item>
   		<item name="android:layout_height">fill_parent</item>
       	<item name="android:layout_weight">1</item>      	
       	<item name="android:listSelector">@drawable/listview_item_selector</item>
       	<item name="android:divider">@drawable/listview_divider_line</item>
       	<item name="android:dividerHeight">1.0dip</item>
       	<item name="android:fadingEdge">none</item>
       	<item name="android:scrollingCache">false</item>
    </style>
    
    <style name="shadow_title_text_view_style" parent="@android:style/Widget.TextView">
        <item name="android:shadowColor">@color/text_white_shadow_color</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    
    <style name="MainBtmPriText">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ff323335</item>
    </style>
    
    <style name="MainBtmSecText">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ff606367</item>
    </style>
    
    <style name="text_home_style1">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    
    <style name="text_home_style4">
        <item name="android:textSize">15.0dip</item>
        <item name="android:textColor">#aaffffff</item>
    </style>
    
    
      
    <style name="detail_head_title">
        <item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">@dimen/text_size_20</item>
		<item name="android:textColor">@color/head_text</item>
		<item name="android:textStyle">bold</item>
		<item name="android:shadowColor">#ffffffff</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
    </style>
    
    <style name="Theme.Preference" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:textAppearanceLarge">@style/App.Preference.TextAppearance.Large</item>
        <item name="android:textAppearanceSmall">@style/App.Preference.TextAppearance.Small</item>
        <item name="android:listSeparatorTextViewStyle">@style/App.Preference.ListSeparator.TextView.Light</item>
        <item name="android:checkboxStyle">@style/App.Preference.CheckBox</item>
        <item name="android:windowAnimationStyle">@style/Animation.ZoomLight</item>
        <item name="android:windowContentOverlay">@null</item> 
    </style>
    
    <style name="App.Preference.CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/pref_checkbox_selector_style</item>
    </style>
    
    <style name="App.Preference.ListSeparator.TextView.Light" parent="@android:style/Widget">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/pref_category_bg</item>
        <item name="android:layout_width">50dip</item>
        <item name="android:layout_height">56dip</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    
     <style name="App.Preference.TextAppearance.Large" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/primary_text_light</item>
    </style>
    
     <style name="App.Preference.TextAppearance.Small" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/secondary_text_light</item>
    </style>
    
      <style name="Animation.ZoomLight" parent="@style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/translucent_zoom_in</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/translucent_zoom_exit</item>
    </style>
    
</resources>