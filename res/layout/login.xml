<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TableLayout
            android:background="@drawable/login_bk"    
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="1">
        <TableRow android:paddingTop="32dip">
        </TableRow>
        <TableRow android:background="#FFFFFF"
                  android:layout_marginRight="12dip"
                  android:layout_marginLeft="12dip">
            <TextView
                    android:text="账号："
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dip"
                    android:textColor="#7b7979"
                    ></TextView>
            <EditText
                    android:id="@+id/userEditText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="#33ff33"
                    android:layout_weight="1"
                    android:inputType=""
                    android:singleLine="true"
                    ></EditText>
        </TableRow>
        <TableRow android:paddingTop="12dip">
        </TableRow>
        <TableRow android:background="#FFFFFF"
                  android:layout_marginRight="12dip"
                  android:layout_marginLeft="12dip"

                >
            <TextView
                    android:text="密码："
                    android:layout_marginLeft="12dip"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#7b7979"
                    android:singleLine="true"
                    ></TextView>
            <EditText
                    android:id="@+id/pwdEditText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="#33ff33"
                    android:layout_weight="1"
                    ></EditText>
        </TableRow>
        <TableRow android:paddingTop="32dip">
        </TableRow>
        <TableRow android:gravity="center">
            <Button

                    android:padding="6dip"
                    android:text="登 录"
                    android:id="@+id/loginButton"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_bt"
                    android:textColor="#000000"
                    android:layout_span="2"

                    ></Button>

        </TableRow>
        <TableRow android:paddingTop="2dip">
        </TableRow>
        <TableRow android:gravity="center"
                  android:layout_marginRight="38dip"
                  android:layout_marginLeft="24dip">

                <ImageButton
                        android:scaleType="fitCenter"
                        android:layout_width="40dip"
                        android:layout_height="70dip"
                        android:src="@drawable/login_bt1"
                        android:id="@+id/cancelButton"
                        android:background="@android:color/transparent"
                        />

            <ImageButton
                    android:scaleType="fitCenter"
                    android:layout_width="40dip"
                    android:layout_height="70dip"
                    android:layout_weight="12"
                    android:src="@drawable/login_bt2"
                    android:background="@android:color/transparent"
                    android:layout_marginRight="12dip"
                   />

            <ImageButton
                    android:scaleType="fitCenter"
                    android:layout_width="64dip"
                    android:layout_height="120dip"
                    android:src="@drawable/login_bt3"
                    android:background="@android:color/transparent"
                    />

        </TableRow>

    </TableLayout>

</merge>